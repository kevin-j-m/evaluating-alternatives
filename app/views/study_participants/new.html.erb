<%= form_with model: @study_participant, url: study_study_participants_path do |form| %>
  <div class="field_with_errors">
    <%= form.label(:first_name, for: :study_participant_first_name) %>
    <%= form.text_field(:first_name, id: :study_participant_first_name, class: "form-control") %>
  </div>

  <div class="field_with_errors">
    <%= form.label(:last_name, for: :study_participant_last_name) %>
    <%= form.text_field(:study_participant_last_name, id: :study_participant_last_name, class: "form-control") %>
  </div>

  <div class="field_with_errors">
    <%= form.label(:email, for: :study_participant_email) %>
    <%= form.text_field(:email, id: :study_participant_email, class: "form-control") %>
  </div>

  <%= form.submit "Enroll", class: "btn btn-default action-btn" %>
<% end %>
